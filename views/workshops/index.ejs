<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><span><i class="fab fa-artstation"></i></span>Welcome to Workshop!</h1>
            <p>View our hend-piced workshops from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/workshops/new">Add New Workshop</a>
            </p>
        </div>
    </header>

    <div class="row text-center">
        <div class="col-md-12">
            <% if(noMatch !== null) { %>
                <h3><%= noMatch %></h3>
            <% } %>
        </div>
        <% workshops.forEach(workshop => { %>
            <div class="figure col-md-3 col-sm-6 text-center">
                <img class="figure-img img-thumbnail" src="<%= workshop.image %>">
                <h4 class="figure-caption"><%= workshop.name %></h4>
                <p>
                    <a href="/workshops/<%= workshop._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        <% }); %>
    </div>  
</div>

<% include ../partials/footer %>
