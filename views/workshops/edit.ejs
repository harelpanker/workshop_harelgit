<% include ../partials/header %>

<div class="container">
    <h2 style="text-align: center">Edit <%= workshop.name %></h2>
    <div class="row">
        <div style="width: 40%; margin: 25px auto;">
            <form action="/workshops/<%= workshop._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="workshop[name]" id="name" value="<%= workshop.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="workshop[image]" id="image" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." value="<%= workshop.image %>" required>
                    <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy <a href="https://unsplash.com/">unsplash</a> urls.</small>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="workshop[description]" id="description" value="<%= workshop.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/workshops">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %> 