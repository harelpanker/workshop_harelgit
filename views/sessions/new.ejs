<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center">Add New Session to <%= workshop.name %></h1>
    <div class="row">
        <div style="width: 40%; margin: 25px auto;">
            <form action="/workshops/<%= workshop._id %>/sessions" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" name="session[title]" type="text"  id="name" placeholder="Yosemite">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="session[image]" id="image" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." required>
                    <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy <a href="https://unsplash.com/">unsplash</a> urls.</small>
                </div>
                <div class="form-group">
                    <label for="time">Time in Minutes</label>
                    <input type="number" name="session[time]" class="form-control" id="time" placeholder="number in minutes">
                </div>
                <div class="form-group">
                    <label for="description">Content</label>
                    <input class="form-control" type="text" name="session[text]" id="description" placeholder="I have the best Workshop ever!">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/workshops">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>