<% include ../partials/header %>

<div class="container">
    <h2 style="text-align: center">Edit session</h2>
    <div class="row">
        <div style="width: 40%; margin: 25px auto;">
                <form action="/workshops/<%= workshop_id %>/sessions/<%= session._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="session[title]" value="<%= session.title %>">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="session[image]" id="image" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." value="<%= session.image %>" required>
                    <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy <a href="https://unsplash.com/">unsplash</a> urls.</small>
                </div>
                <div class="form-group">
                    <label for="time">Time of Session</label>
                    <input type="number" name="session[time]" class="form-control" id="time" value="<%= session.time %>" required>
                </div>
                <div class="form-group">
                    <label for="description">Content</label>
                    <input class="form-control" type="text" name="session[text]" id="description" value="<%= session.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/workshops">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>